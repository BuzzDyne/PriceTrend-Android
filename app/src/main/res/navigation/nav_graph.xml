<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.buzzdynegamingteam.pricetrend.views.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment">
        <argument
            android:name="isAuthed"
            app:argType="boolean"
            android:defaultValue="false"
            />
        <action
            android:id="@+id/action_homeFragment_to_trackingFragment"
            app:destination="@id/trackingFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.buzzdynegamingteam.pricetrend.views.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/profile_fragment"/>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.buzzdynegamingteam.pricetrend.views.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/search_fragment"/>
    <fragment
        android:id="@+id/trackingFragment"
        android:name="com.buzzdynegamingteam.pricetrend.views.TrackingFragment"
        android:label="TrackingFragment"
        tools:layout="@layout/tracking_fragment"/>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.buzzdynegamingteam.pricetrend.views.LoginRegisterFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >


        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>